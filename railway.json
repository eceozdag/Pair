{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd app/wine-recognition-backend && npm install && npm run build",
    "watchPatterns": [
      "app/wine-recognition-backend/**"
    ]
  },
  "deploy": {
    "startCommand": "cd app/wine-recognition-backend && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
