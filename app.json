{
  "expo": {
    "name": "Wine Pairing App",
    "slug": "wine-pairing-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "backgroundColor": "#FEFAF6"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.winepairing.app"
    },
    "android": {
      "package": "com.winepairing.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-camera",
      "expo-image-picker"
    ]
  }
}